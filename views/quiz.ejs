<!DOCTYPE html>
<html>
  <head>
    <title>Quiz Question</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="container">
      <h1>Question <%= questionNumber %> of <%= totalQuestions %></h1>
      <div class="question" id = question>
        <h3><%= question.question %></h3>
        
        <!-- /play/next for the router in questions.js -->
        <form action="/play/next" method="POST">
          <input name="totalQuestions" value="<%= totalQuestions %>" hidden readonly>
          <div class="options">
            <% options.forEach(function(option) { %>
              <div class="option">
                <input type="radio" id="<%= option.key %>" name="answer" value="<%= option.key %>" required>
                <label for="<%= option.key %>"><%= option.key %>: <%= option.value %></label>
              </div>
            <% }); %>
          </div>
          <button type="submit" class="btn">Next Question</button>
        </form>
      </div>
    </div>
  </body>
</html>